{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "App.tsx",
    "screens/**/*.tsx",
    "components/**/*.tsx",
    "api/**/*.ts",
    "lib/**/*.ts",
    "hooks/**/*.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    "components/ui/**/*"
  ],
  "extends": "./node_modules/expo/tsconfig.base"
}